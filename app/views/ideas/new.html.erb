<h1>Create an idea</h1>

<%= form_for @idea do |f|%>
    <p>
    <%= f.label :titile %>
    <br>
    <%= f.text_field :title %>
    </p>
    <br>
    <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, rows: 10, cols: 50 %>
    </p>
    <p>
    <%= f.submit %>
    </p>
<% end %>
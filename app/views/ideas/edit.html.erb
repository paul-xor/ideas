<h1>Edit existing Idea</h1>
<% if @idea.errors.any? %>
    <ul>
        <% @idea.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @idea do |f|%>
    <p>
    <%= f.label :titile %>
    <br>
    <%= f.text_field :title %>
    </p>
    <br>
    <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, rows: 10, cols: 50 %>
    </p>
    <p>
    <%= f.submit %>
    </p>
<% end %>